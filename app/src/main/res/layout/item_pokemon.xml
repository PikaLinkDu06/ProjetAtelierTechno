<LinearLayout
    android:id="@+id/pokemon_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_size"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_marginLeft="@dimen/image_pokemon_marginLeft"
        android:layout_marginRight="@dimen/image_pokemon_marginRight"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/pokemon_size"
        android:layout_height="@dimen/pokemon_size" />

    <TextView
        android:id="@+id/pokemon_name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_pokemon_name"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/id_pokemon"
        android:textColor="@color/red"
        android:textSize="@dimen/text_pokemon_name"
        android:layout_gravity="end"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent" />

</LinearLayout>